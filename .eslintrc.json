{
    "env": {
        "browser": true,
        "node": true,
        "es6" : true
    },
    "extends": [
        "eslint:recommended"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi" :["error","always"],
        "indent":[1,4],
        "quotes":[2,"single"]
    }
}
